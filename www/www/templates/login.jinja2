{% extends "layout.jinja2" %}
{% set page_title = "HostHealth::Login" %}
{% block content %}
    <div style="height:100px">
    </div>
    <div class="panel panel-primary" style="width: 205px; margin:auto">
        <div class="panel-heading">
            <h1 class="panel-title"><span class="glyphicon glyphicon-user"></span> Login</h1>
        </div>
        <div class="panel-body">
            <form class="form-horizontal" style="margin-bottom:0" method="POST">
                <label for="email">Email address</label>
                <input class="form-control" type="text" id="email" name="email" placeholder="Email">
                <label for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" placeholder="Password">
                <button type="submit" class="btn btn-default"name="form_submitted">Submit</button>
            </form>
        </div>
        {% if error %}
        <div class="alert alert-danger panel-footer ">
                {{error}}
        </div>
        {% endif %}
    </div>
{% endblock %}

{% block js %}
    $(document).ready(function(){
        $("#email").focus();
    });
{% endblock %}
